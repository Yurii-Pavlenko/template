{
  "name": "template",
  "version": "1.0.0",
  "private": true,
  "description": "Шаблон-заготовка для проектов с использованием Less+Gulp",
  "devDependencies": {
    "autoprefixer": "7.2.x",
    "browser-sync": "2.23.x",
    "del": "3.0.0",
    "gulp": "3.9.x",
    "gulp-csso": "3.0.1",
    "gulp-imagemin": "4.1.0",
    "gulp-posthtml": "3.0.4",
    "gulp-rename": "1.2.2",
    "gulp-less": "3.4.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-svgstore": "6.1.1",
    "gulp-webp": "3.0.0",
    "gulp-concat": "2.6.1",
    "posthtml-include": "1.1.0",
    "run-sequence": "2.2.1",
    "css-mqpacker": "6.0.2",
    "gulp-uglify": "3.0.0",
    "imagemin-jpegoptim": "5.2.0",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "8.4.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint 'source/less/**/*.less' --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "npm run build && gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.9"
  }
}
